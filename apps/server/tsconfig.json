{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@shared/*": ["../../packages/shared/*"],
      "@/*": ["./src/*"],
      "@prisma-client/*": ["./generated/prisma/*"]
    }
  },
  "include": [
    "typings/**.d.ts",
    "src/**/*.ts",
    "generated/**/*",
    "setup/**/*.ts",
    "../../packages/shared/typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.e2e-spec.ts"
  ]
}
