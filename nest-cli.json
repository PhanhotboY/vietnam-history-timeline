{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "generateOptions": {
    "spec": false
  },
  "sourceRoot": ".",
  "defaultLibraryPrefix": "@phanhotboy",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "tsconfig.build.json"
  },
  "monorepo": true,
  "root": "apps/auth",
  "projects": {
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "sourceRoot": "apps/auth/src",
      "entryFile": "main",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "nsv-common": {
      "type": "library",
      "root": "libs/nsv-common",
      "entryFile": "index",
      "sourceRoot": "libs/nsv-common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/nsv-common/tsconfig.lib.json"
      }
    },
    "nsv-jwt-auth": {
      "type": "library",
      "root": "libs/nsv-jwt-auth",
      "entryFile": "index",
      "sourceRoot": "libs/nsv-jwt-auth/src",
      "compilerOptions": {
        "tsConfigPath": "libs/nsv-jwt-auth/tsconfig.lib.json"
      }
    },
    "user": {
      "type": "application",
      "root": "apps/user",
      "entryFile": "main",
      "sourceRoot": "apps/user/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user/tsconfig.app.json"
      }
    }
  }
}
